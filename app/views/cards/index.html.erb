<div class="table">
<table>
  <tr>                            
    <th>B</th>
    <th>I</th>
    <th>N</th>
    <th>G</th>   
    <th>O</th>
  </tr> 

  <% i = 0 %>     
  <% 5.times do |row| %>
    <tr>
      <% 5.times do |col| %>  
        <% if row == 2 && col == 2 %> 
        <td id=square1-0><img src="/assets/bingo.svg" /><figcaption>Kid Playing Bingo</figcaption></td>
        <% else %>
        <td id=<%= "square#{row}-#{col}" %>><%= image_tag @picture[i] %><figcaption><%= @caption[i] %></figcaption></td>  
        <% end %>
        <% i +=1 %>               
      <% end %>                                
    </tr> 
  <% end %>  
</table>
</div>

